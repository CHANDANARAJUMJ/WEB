<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN"
  "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
  <title>Test Marks Average Calculator</title>
  <script type="text/javascript">
    function validateAndComputeAverage() {
      var regNo = document.getElementById("regno").value;
      var subCode = document.getElementById("subcode").value;
      var marks1 = document.getElementById("marks1").value;
      var marks2 = document.getElementById("marks2").value;
      var marks3 = document.getElementById("marks3").value;

      if (regNo === "" || subCode === "" || marks1 === "" || marks2 === "" || marks3 === "") {
        alert("All fields must be filled out");
        return false;
      }

      marks1 = parseFloat(marks1);
      marks2 = parseFloat(marks2);
      marks3 = parseFloat(marks3);

      if (isNaN(marks1) || isNaN(marks2) || isNaN(marks3)) {
        alert("Please enter valid numbers for marks");
        return false;
      }

      var marks = [marks1, marks2, marks3];
      marks.sort(function(a, b) { return b - a; });
      var average = (marks[0] + marks[1]) / 2;

      alert("The average of the best two marks is: " + average);
    }
  </script>
</head>
<body>
  <h1>Test Marks Average Calculator</h1>
  <form name="marksForm">
    <label>Register Number:</label>
    <input type="text" id="regno" /><br /><br />
    
    <label>Subject Code:</label>
    <input type="text" id="subcode" /><br /><br />
    
    <label>Marks for Test 1:</label>
    <input type="text" id="marks1" /><br /><br />
    
    <label>Marks for Test 2:</label>
    <input type="text" id="marks2" /><br /><br />
    
    <label>Marks for Test 3:</label>
    <input type="text" id="marks3" /><br /><br />
    
    <button type="button" onclick="validateAndComputeAverage()">Compute Average</button>
  </form>
</body>
</html>
